<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css"/>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"/>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
    }

    /* Breadcrumb styling for inline view */
    .breadcrumb {
        display: flex;
        padding: 10px 0;
        list-style: none;
        background: none;
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
    }

    .breadcrumb-item {
        display: inline;
        margin-right: 10px;
    }

    .breadcrumb-item a {
        color: #007bff;
        text-decoration: none;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: '/';
        margin: 0 5px;
        color: #6c757d;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    /* Layout container for image and details */
    .product-container {
        display: flex;
        flex-direction: row;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        background-color: white;
    }

    .image-section {
        display: flex;
        flex-direction: row;
        flex-grow: 1;
    }

    /* Column for vertical images */
    .thumbnail-container {
        display: flex;
        flex-direction: column;
        margin-right: 10px;
    }

    .thumbnail {
        cursor: pointer;
        width: 100px; /* Thumbnail width */
        height: 100px; /* Thumbnail height */
        margin-bottom: 10px;
        border: 1px solid #ddd;
        object-fit: cover;
    }

    /* Main image */
    .main-image {
    border: 1px solid #ddd;
    width: 25em; /* Increased width */
    height: 25em; /* Increased height */
    object-fit: cover;
    margin-right: 20px;
}

    /* Product details section */
    .product-details {
        flex-grow: 1;
    }

    .product-price {
        font-size: 24px;
        color: #28a745;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product-discount {
        color: #dc3545;
        font-weight: bold;
        font-size: 20px;
    }

    .offers {
        background-color: #f8f9fa;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .offer-item {
        margin-bottom: 10px;
    }

    .offer-item i {
        color: #28a745;
        margin-right: 5px;
    }

    .btn-inline {
    display: inline-flex;
    align-items: center;
    margin-right: 10px;
}

    .btn-success, .btn-primary {
        width: 150px;
        margin-right: 10px;
    }

    /* Spec and review sections */
    .specs-reviews {
        margin-top: 20px;
    }

    .specs-reviews h4 {
        margin-top: 20px;
    }


    .related-products-slider {
    position: relative;
    width: 100%;
    padding: 20px 0;
}

.slider-container {
    display: flex;
    justify-content: space-between;
}

.related-product-card {
    border: 1px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
    background-color: white;
    transition: box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    height: 75%;
    margin: 1em; /* Margin around each card */
}

.card-content {
    display: flex;
    flex-direction: row;
}

.product-image {
    width: 70%; /* Adjust image width */
}

.product-image img {
    max-width: 100%;
    height: auto;
}

.product-details {
    width: 60%; /* Adjust details width */
    padding-left: 15px;
}

.slick-prev, .slick-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #fff;
    border: 1px solid #ddd;
    padding: 5px 10px;
    cursor: pointer;
    z-index: 10;
}

.slick-prev {
    left: 0;
}

.slick-next {
    right: 0;
}

@media screen and (max-width: 768px) {
    .related-product-card {
        width: 100%; /* Full width on smaller screens */
    }

    .card-content {
        flex-direction: column;
    }

    .product-image, .product-details {
        width: 100%;
    }

    .product-details {
        padding-left: 0;
        margin-top: 10px;
    }
}


</style>

<%- include('../partials/user_navbar.ejs') %>

<div class="container">
    <h1><%= product.name %></h1>

    <!-- Breadcrumbs -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/user/shop">Shop</a></li>
        <li class="breadcrumb-item active"><%= product.name %></li>
    </ol>

    <!-- Product layout -->
    <div class="product-container">
        <!-- Image Section -->
        <div class="image-section">
            <div class="thumbnail-container">
                <% product.images.forEach((image, index) => { %>
                    <% if (image) { %> <!-- Check if the image exists -->
                        <img src="/<%= image.split('\\').pop().split('/').pop() %>" alt="<%= product.name %>" class="thumbnail" id="thumb-<%= index %>" onclick="changeMainImage('/<%= image.split('\\').pop().split('/').pop() %>')">
                    <% } %>
                <% }); %>
            </div>
        
            <!-- Main image -->
            <img id="mainImage" src="/<%= product.images[0] ? product.images[0].split('\\').pop().split('/').pop() : 'placeholder.jpg' %>" alt="<%= product.name %>" class="main-image">
        </div>
        
        <!-- Product Details Section -->
        <div class="product-details">
            <h3 class="product-price">₹<%= product.price %></h3>
            <p class="product-discount">67% off</p>
            <p class="product-rating">Rating: <%= product.rating %> / 5</p>
            <p>Stock: <%= product.stockStatus %></p>

            <!-- Offers Section -->
            <div class="offers">
                <h5>Available Offers</h5>
           
            </div>

            <!-- Action Buttons -->
            <div class="btn-inline">
                <button class="btn btn-success" <%= product.stock === 0 ? 'disabled' : '' %>>Add to Cart</button>
                <button class="btn btn-primary">Buy Now</button>
            </div>
        </div>
    </div>

    <!-- Highlights / Specs -->
    <div class="specs-reviews">
        <h4>Highlights</h4>
        <ul>
            <% if (product.highlights && Array.isArray(product.highlights) && product.highlights.length > 0) { %>
                <% product.highlights.forEach(function(highlight) { %>
                    <li><%= highlight %></li>
                <% }) %>
            <% } else { %>
                <li>No highlights available.</li>
            <% } %>
        </ul>
        
        <h4>Specifications</h4>
        <ul>
            <% if (product.specifications && typeof product.specifications === 'object' && Object.keys(product.specifications).length > 0) { %>
                <% Object.keys(product.specifications).forEach(function(key) { %>
                    <li><strong><%= key %>:</strong> <%= product.specifications[key] %></li>
                <% }) %>
            <% } else { %>
                <li>No specifications available.</li>
            <% } %>
        </ul>
                    

        <!-- Reviews -->
        <h4>Reviews</h4>
        <div>
            <% if (product.reviews && Array.isArray(product.reviews) && product.reviews.length > 0) { %>
                <% product.reviews.forEach(review => { %>
                    <div class="review">
                        <strong><%= review.userName %></strong>: <%= review.comment %>
                        <p>Rating: <%= review.rating %> / 5</p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No reviews available</p>
            <% } %>
        </div>
        <!-- Related Products -->
        <h4>Related Products</h4>
        <div class="related-products-slider">
            <div class="slider-container">
                <% relatedProducts.forEach(relatedProduct => { %>
                    <div class="related-product-card"> <!-- Each card should be a slide -->
                        <div class="card-content">
                            <!-- Left side: Product Image -->
                            <div class="product-image">
                                <img src="/<%= relatedProduct.images[0] ? relatedProduct.images[0].split('\\').pop().split('/').pop() : 'placeholder.jpg' %>" alt="<%= relatedProduct.name %>" class="main-image">
                            </div>
                            <!-- Right side: Product Details -->
                            <div class="product-details">
                                <h5><a href="/user/shop/<%= relatedProduct._id %>"><%= relatedProduct.name %></a></h5>
                                <p><%= relatedProduct.description %></p>
                                <p>Price: ₹<%= relatedProduct.price %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <!-- Navigation arrows -->
            <button class="slick-prev" aria-label="Previous">&lt;</button>
            <button class="slick-next" aria-label="Next">&gt;</button>
        </div>
    </div>
</div>

